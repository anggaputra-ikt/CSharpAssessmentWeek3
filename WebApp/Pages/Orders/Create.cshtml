@page
@model WebApp.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create Order";
}

<div class="card m-3">
    <div class="card-header">
        <a asp-page="/Index" class="h1 text-decoration-none">Coffe In Aja</a>
    </div>
    <div class="card-body">
        <h3>Create Order</h3>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Order.Id" class="control-label"></label>
                        <input asp-for="Order.Id" class="form-control" readonly />
                        <span asp-validation-for="Order.Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order.Customer" class="control-label"></label>
                        <input asp-for="Order.Customer" class="form-control" />
                        <span asp-validation-for="Order.Customer" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Order.DineIn" /> @Html.DisplayNameFor(model => model.Order.DineIn)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Process" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <a class="btn btn-secondary" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
