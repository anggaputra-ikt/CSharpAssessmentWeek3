@page
@model WebApp.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.Id" class="control-label"></label>
                <input asp-for="Order.Id" class="form-control" readonly />
                <span asp-validation-for="Order.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Customer" class="control-label"></label>
                <input asp-for="Order.Customer" class="form-control" />
                <span asp-validation-for="Order.Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Product</label>
                <div class="input-group mb-3">
                    <input asp-for="Product" type="text" class="form-control" placeholder="Product" aria-label="Product">
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="Quantity" aria-label="Quantity">
                    <input asp-for="Submit" type="submit" value="+ Add Product" class="btn btn-primary" />

                    @foreach (var product in Model.OrderItems)
                    {
                        <p>@product.Product.Name</p>
                    }
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Order.DineIn" /> @Html.DisplayNameFor(model => model.Order.DineIn)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
