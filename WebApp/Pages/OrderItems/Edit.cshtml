@page
@model EditModel

@{
    ViewData["Title"] = "Edit Order Item";
}

<div class="card m-3">
    <div class="card-header">
        <a asp-page="/Index" class="h1 text-decoration-none">Coffe In Aja</a>
    </div>
    <div class="card-body">
        <h3>Edit Order Item</h3>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="OrderItem.Id" />
                    <div class="form-group">
                        <label asp-for="OrderItem.Quantity" class="control-label"></label>
                        <input asp-for="OrderItem.Quantity" class="form-control" />
                        <span asp-validation-for="OrderItem.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <a class="btn btn-secondary" asp-page="/Orders/Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
